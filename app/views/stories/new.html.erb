<h1 class="title">新增故事</h1>

<%= form_for(@story) do |form| %>
  <div class="field">
    <%= form.label :title, '標題' %>
    <%= form.text_field :title, class: 'input is-primary' %>
  </div>
  <div class="field">
    <%= form.label :content, '內容' %>
    <%= form.text_area :content, class: 'input is-primary' %>
  </div>
  <div class="field">
    <%= form.submit '儲存草稿', class: 'button' %>
    <%= form.submit '發佈文章', class: 'button is-primary' %>
  </div>
<% end %>